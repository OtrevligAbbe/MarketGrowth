@page "/"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Linq
@using System.Globalization
@using frontend.Shared
@using MarketGrowth.Frontend.Shared
@inject HttpClient Http

<div class="mg-home">

    <!-- HERO-DELEN -->
    <section class="mg-home-hero">
        <div class="mg-home-hero-left">
            <div class="mg-home-pill">Market overview</div>

            <h1>See your markets growth</h1>

            <p>
                MarketGrowth samlar data från externa API:er via Azure Functions och
                visar en enkel översikt över dina valda marknader. Följ priser, spara
                favoriter och testa egna strategier i molnet.
            </p>

            <div class="mg-home-hero-actions">
                <a href="/marketdata" class="mg-btn mg-btn-primary">
                    Go to live crypto data
                </a>
                <a href="/authentication" class="mg-btn mg-btn-outline mg-hero-secondary">
                    Log in to save favourites
                </a>
            </div>

            <div class="mg-home-hero-stats">
                <div class="mg-home-stat">
                    <span class="mg-home-stat-label">Crypto assets</span>
                    <span class="mg-home-stat-value">@(_overview?.Crypto?.Count ?? 0)</span>
                </div>
                <div class="mg-home-stat">
                    <span class="mg-home-stat-label">Stocks</span>
                    <span class="mg-home-stat-value">@(_overview?.Stocks?.Count ?? 0)</span>
                </div>
                <div class="mg-home-stat">
                    <span class="mg-home-stat-label">Update interval</span>
                    <span class="mg-home-stat-value">60s</span>
                </div>
                <div class="mg-home-stat">
                    <span class="mg-home-stat-label">Favourites</span>
                    <span class="mg-home-stat-value">@_favoriteKeys.Count</span>
                </div>
            </div>
        </div>

        <div class="mg-home-hero-right">
            <div class="mg-home-chart-card">
                <div class="mg-home-chart-header">
                    <span class="mg-chart-title">Overview 7 days chart</span>
                    <span class="mg-chart-badge">Live</span>
                </div>

                @if (!string.IsNullOrEmpty(_error))
                {
                    <div class="mg-home-chart-empty">
                        @_error
                    </div>
                }
                else if (_selectedAsset is null)
                {
                    <div class="mg-home-chart-empty">
                        Loading live overview...
                    </div>
                }
                else
                {
                    <div class="mg-home-chart-asset">
                        <div class="mg-home-chart-asset-header">
                            <span class="mg-asset-symbol">@_selectedAsset.Symbol</span>
                            <span class="mg-asset-name">@_selectedAsset.Name</span>
                        </div>

                        <div class="mg-home-chart-asset-main">
                            <div class="mg-asset-price">
                                @_selectedAsset.PriceUsd.ToString(
                                    "C2",
                                    CultureInfo.GetCultureInfo("en-US"))
                            </div>
                            <div class="mg-asset-change @( _selectedAsset.Change24h >= 0 ? "mg-pos" : "mg-neg")">
                                @(_selectedAsset.Change24h >= 0 ? "+" : "")@_selectedAsset.Change24h.ToString("0.##")%
                            </div>
                        </div>

                        <Sparkline Data="@_selectedAsset.Sparkline7d"
                                   IsPositive="@(_selectedAsset.Change24h >= 0)" />

                        <button type="button"
                                class="mg-fav-button @(IsFavorite(_selectedAsset) ? "mg-fav-active" : "")"
                                style="margin-top:0.75rem;"
                                @onclick="@(() => ToggleFavoriteAsync(_selectedAsset))">
                            <span class="mg-fav-star">★</span>
                        </button>
                    </div>

                    <div class="mg-home-chart-footer">
                        @for (var i = 0; i < _allPreview.Count; i++)
                        {
                            var asset = _allPreview[i];
                            var isActive = i == _selectedIndex;

                            <button type="button"
                                    class="mg-chart-dot-button @(isActive ? "active" : "")"
                                    @onclick="@(() => SelectAsset(i))">
                                @asset.Symbol
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- QUICK MARKET PREVIEW MED RIKTIG DATA -->
    <section class="mg-home-markets-preview">
        <div class="mg-home-markets-header">
            <h2>Quick market preview</h2>
            <p>Live-data från Azure Functions – 5 kryptovalutor och 5 aktier.</p>
        </div>

        @if (!string.IsNullOrEmpty(_error))
        {
            <p style="color:red">@_error</p>
        }
        else if (_overview is null)
        {
            <p>Laddar live-data...</p>
        }
        else
        {
            <div class="mg-home-preview-grid">
                @foreach (var asset in _cryptoPreview)
                {
                    <div class="mg-home-preview-card">
                        <span class="mg-preview-name">@asset.Name (@asset.Symbol)</span>
                        <span class="mg-preview-price">
                            @asset.PriceUsd.ToString("C2", CultureInfo.GetCultureInfo("en-US"))
                        </span>
                        <span class="mg-preview-change @(asset.Change24h >= 0 ? "positive" : "negative")">
                            @(asset.Change24h >= 0 ? "+" : "")@asset.Change24h.ToString("0.##")%
                        </span>

                        <Sparkline Data="@asset.Sparkline7d"
                                   IsPositive="@(asset.Change24h >= 0)" />

                        <button type="button"
                                class="mg-fav-button @(IsFavorite(asset) ? "mg-fav-active" : "")"
                                @onclick="@(() => ToggleFavoriteAsync(asset))">
                            <span class="mg-fav-star">★</span>
                        </button>
                    </div>
                }

                @foreach (var asset in _stockPreview)
                {
                    <div class="mg-home-preview-card">
                        <span class="mg-preview-name">@asset.Name (@asset.Symbol)</span>
                        <span class="mg-preview-price">
                            @asset.PriceUsd.ToString("C2", CultureInfo.GetCultureInfo("en-US"))
                        </span>
                        <span class="mg-preview-change @(asset.Change24h >= 0 ? "positive" : "negative")">
                            @(asset.Change24h >= 0 ? "+" : "")@asset.Change24h.ToString("0.##")%
                        </span>

                        <Sparkline Data="@asset.Sparkline7d"
                                   IsPositive="@(asset.Change24h >= 0)" />

                        <button type="button"
                                class="mg-fav-button @(IsFavorite(asset) ? "mg-fav-active" : "")"
                                @onclick="@(() => ToggleFavoriteAsync(asset))">
                            <span class="mg-fav-star">★</span>
                        </button>
                    </div>
                }
            </div>
        }
    </section>
</div>

@code
{
    // just nu: en demo-user-id (sen kan vi koppla till riktiga AuthState.UserId)
    private const string DemoUserId = "demo-user-1";

    private MarketOverviewResponse? _overview;
    private List<MarketInstrument> _cryptoPreview = new();
    private List<MarketInstrument> _stockPreview = new();
    private List<MarketInstrument> _allPreview = new();
    private MarketInstrument? _selectedAsset;
    private int _selectedIndex;
    private string? _error;

    private readonly HashSet<string> _favoriteKeys = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
#if DEBUG
            var baseUrl = "http://localhost:7247";
#else
            var baseUrl = "https://marketgrowth-api-astenhoff-ajhuarfah0akf5gp.swedencentral-01.azurewebsites.net";
#endif
            var overviewUrl = $"{baseUrl}/api/market/overview";

            _overview = await Http.GetFromJsonAsync<MarketOverviewResponse>(overviewUrl);

            if (_overview is not null)
            {
                _cryptoPreview = _overview.Crypto.Take(5).ToList();
                _stockPreview  = _overview.Stocks.Take(5).ToList();
                _allPreview    = _cryptoPreview.Concat(_stockPreview).ToList();

                if (_allPreview.Count > 0)
                {
                    var rng = new Random();
                    _selectedIndex = rng.Next(0, _allPreview.Count);
                    _selectedAsset = _allPreview[_selectedIndex];
                }
            }

            await LoadFavoritesAsync(baseUrl);
        }
        catch (Exception ex)
        {
            _error = $"Kunde inte hämta marknadsdata: {ex.Message}";
        }
    }

    private void SelectAsset(int index)
    {
        if (index < 0 || index >= _allPreview.Count) return;

        _selectedIndex = index;
        _selectedAsset = _allPreview[index];
    }

    private static string GetAssetKey(MarketInstrument asset)
        => $"{asset.Category}:{asset.Symbol}";

    private bool IsFavorite(MarketInstrument asset)
        => _favoriteKeys.Contains(GetAssetKey(asset));

    private async Task LoadFavoritesAsync(string baseUrl)
    {
        try
        {
            var url = $"{baseUrl}/api/favorites/{DemoUserId}";

            var favorites = await Http.GetFromJsonAsync<List<FavoriteAssetRequest>>(url)
                           ?? new List<FavoriteAssetRequest>();

            _favoriteKeys.Clear();

            foreach (var fav in favorites)
            {
                var key = $"{fav.AssetType}:{fav.Symbol}";
                _favoriteKeys.Add(key);
            }
        }
        catch
        {
            // ignorerar fel här, UI får funka ändå
        }
    }

    private async Task ToggleFavoriteAsync(MarketInstrument asset)
    {
        var key = GetAssetKey(asset);

#if DEBUG
        var baseUrl = "http://localhost:7247";
#else
        var baseUrl = "https://marketgrowth-api-astenhoff-ajhuarfah0akf5gp.swedencentral-01.azurewebsites.net";
#endif

        if (_favoriteKeys.Contains(key))
        {
            var deleteUrl = $"{baseUrl}/api/favorites/{DemoUserId}/{asset.Symbol}";

            try
            {
                await Http.DeleteAsync(deleteUrl);
                _favoriteKeys.Remove(key);
            }
            catch (Exception ex)
            {
                _error = $"Kunde inte ta bort favorit: {ex.Message}";
            }

            return;
        }

        _favoriteKeys.Add(key);

        var request = new FavoriteAssetRequest
        {
            UserId = DemoUserId,
            AssetId = asset.Symbol,
            AssetType = asset.Category,
            Symbol = asset.Symbol,
            LastPrice = asset.PriceUsd
        };

        var url = $"{baseUrl}/api/favorites";

        try
        {
            await Http.PostAsJsonAsync(url, request);
        }
        catch (Exception ex)
        {
            _error = $"Kunde inte spara favorit: {ex.Message}";
            _favoriteKeys.Remove(key);
        }
    }
}
