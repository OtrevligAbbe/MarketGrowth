@page "/marketdata"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Globalization
@using frontend.Shared
@using MarketGrowth.Frontend.Shared
@inject HttpClient Http

<h1>MarketGrowth</h1>
<p class="mg-subtitle">Quick market preview with live data</p>

@if (!string.IsNullOrEmpty(_error))
{
    <p style="color: red">@_error</p>
}
else if (_overview == null)
{
    <p>Loading live market data...</p>
}
else
{
    <!-- CRYPTO -->
    <section class="mg-section">
        <h2 class="mg-section-title">Crypto assets</h2>
        <div class="mg-card-row">
            @foreach (var asset in _overview.Crypto)
            {
                <div class="mg-preview-card">
                    <div class="mg-card-symbol">@asset.Symbol</div>
                    <div class="mg-card-name">@asset.Name</div>
                    <div class="mg-card-price">
                        @asset.PriceUsd.ToString("C2",
                            CultureInfo.GetCultureInfo("en-US"))
                    </div>
                    <div class="mg-card-change @(asset.Change24h >= 0 ? "mg-pos" : "mg-neg")">
                        @asset.Change24h.ToString("0.##") %
                    </div>

                    <Sparkline Data="@asset.Sparkline7d"
                               IsPositive="@(asset.Change24h >= 0)" />

                    <!-- Bara stjärna, färg styrs av om den är favorit -->
                    <button type="button"
                            class="mg-fav-button @(IsFavorite(asset) ? "mg-fav-active" : "")"
                            @onclick="@(() => ToggleFavoriteAsync(asset))">
                        <span class="mg-fav-star">★</span>
                    </button>
                </div>
            }
        </div>
    </section>

    <!-- STOCKS -->
    <section class="mg-section">
        <h2 class="mg-section-title">Stocks</h2>
        <div class="mg-card-row">
            @foreach (var asset in _overview.Stocks)
            {
                <div class="mg-preview-card">
                    <div class="mg-card-symbol">@asset.Symbol</div>
                    <div class="mg-card-name">@asset.Name</div>
                    <div class="mg-card-price">
                        @asset.PriceUsd.ToString("C2",
                            CultureInfo.GetCultureInfo("en-US"))
                    </div>
                    <div class="mg-card-change @(asset.Change24h >= 0 ? "mg-pos" : "mg-neg")">
                        @asset.Change24h.ToString("0.##") %
                    </div>

                    <Sparkline Data="@asset.Sparkline7d"
                               IsPositive="@(asset.Change24h >= 0)" />

                    <button type="button"
                            class="mg-fav-button @(IsFavorite(asset) ? "mg-fav-active" : "")"
                            @onclick="@(() => ToggleFavoriteAsync(asset))">
                        <span class="mg-fav-star">★</span>
                    </button>
                </div>
            }
        </div>
    </section>

    <!-- WORLD INDICES -->
    <section class="mg-section">
        <h2 class="mg-section-title">World indices</h2>
        <div class="mg-card-row">
            @foreach (var asset in _overview.Indices)
            {
                <div class="mg-preview-card">
                    <div class="mg-card-symbol">@asset.Symbol</div>
                    <div class="mg-card-name">@asset.Name</div>
                    <div class="mg-card-price">
                        @asset.PriceUsd.ToString("C2",
                            CultureInfo.GetCultureInfo("en-US"))
                    </div>
                    <div class="mg-card-change @(asset.Change24h >= 0 ? "mg-pos" : "mg-neg")">
                        @asset.Change24h.ToString("0.##") %
                    </div>

                    <Sparkline Data="@asset.Sparkline7d"
                               IsPositive="@(asset.Change24h >= 0)" />

                    <button type="button"
                            class="mg-fav-button @(IsFavorite(asset) ? "mg-fav-active" : "")"
                            @onclick="@(() => ToggleFavoriteAsync(asset))">
                        <span class="mg-fav-star">★</span>
                    </button>
                </div>
            }
        </div>
    </section>
}

@code {
    private const string DemoUserId = "demo-user-1";

    private MarketOverviewResponse? _overview;
    private string? _error;

    // Håller koll på vilka assets som är favoriter i UI
    // (key: "Category:Symbol" så BTC i Crypto och BTC i Stocks blir olika)
    private readonly HashSet<string> _favoriteKeys = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
#if DEBUG
            // Lokalt - Function körs på din dator
            var baseUrl = "http://localhost:7247";
#else
            // I Azure - prata direkt med din Function App
            var baseUrl = "https://marketgrowth-api-astenhoff-ajhuarfah0akf5gp.swedencentral-01.azurewebsites.net";
#endif

            var overviewUrl = $"{baseUrl}/api/market/overview";

            _overview = await Http.GetFromJsonAsync<MarketOverviewResponse>(overviewUrl);
        }
        catch (Exception ex)
        {
            _error = $"Kunde inte hämta marknadsdata: {ex.Message}";
        }
    }

    // Nyckel per asset för favorite-listan
    private static string GetAssetKey(MarketInstrument asset)
        => $"{asset.Category}:{asset.Symbol}";

    private bool IsFavorite(MarketInstrument asset)
        => _favoriteKeys.Contains(GetAssetKey(asset));

    private async Task ToggleFavoriteAsync(MarketInstrument asset)
    {
        var key = GetAssetKey(asset);

        // Om den redan är favorit: ta bara bort visuellt (Cosmos har redan raden, Upsert gör inget farligt)
        if (_favoriteKeys.Contains(key))
        {
            _favoriteKeys.Remove(key);
            return;
        }

        // Markera som favorit i UI direkt
        _favoriteKeys.Add(key);

        var request = new FavoriteAssetRequest
        {
            UserId = DemoUserId,
            AssetId = asset.Symbol,      // id i din FavoriteAssetEntity blir UserId_AssetId
            AssetType = asset.Category,
            Symbol = asset.Symbol,
            LastPrice = asset.PriceUsd
        };

#if DEBUG
        var baseUrl = "http://localhost:7247";
#else
        var baseUrl = "https://marketgrowth-api-astenhoff-ajhuarfah0akf5gp.swedencentral-01.azurewebsites.net";
#endif

        var url = $"{baseUrl}/api/favorites";

        try
        {
            // Vi använder fortfarande din AddFavorite-function (Cosmos upsert)
            await Http.PostAsJsonAsync(url, request);
        }
        catch (Exception ex)
        {
            // Om det skiter sig i backend vill vi inte krascha sidan
            _error = $"Kunde inte spara favorit: {ex.Message}";
            // rulla tillbaka UI-state
            _favoriteKeys.Remove(key);
        }
    }
}
